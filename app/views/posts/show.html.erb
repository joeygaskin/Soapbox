<h2 class="mt-5"><%= @post.title %></h2>
<div class="post-data row mb-3 postbyline ">
  <div class="">
<%= image_tag(current_user.avatar, class:"avatar-sm") %>
  </div>
  <div class="ml-3">
    <%= current_user.name %>
    <p>
    <%= @post.created_at.strftime("%B %d, %Y") %>
  </div>
</div>
<hr>
<%= link_to "Edit", edit_post_path(current_user.username, @post), :class => 'btn btn-default' %>
<%= link_to "Delete", post_path(current_user.username, @post),
                      method: :delete,
                      data: {confirm: 'Are you sure?'},
                      :class => 'btn btn-danger' %>
<hr>
<p><%= @post.body %></p>

<hr>
<p>
<hr>
